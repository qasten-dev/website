---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="p-8">
    <div
      class="mx-auto mt-36 flex max-w-2xl flex-col gap-y-4 rounded-lg border-1 border-gray-400 bg-slate-100 px-2 py-8 text-center"
    >
      <h1 class="text-2xl font-semibold">Thank you for contacting us!</h1>
      <p class="text-lg text-gray-600">
        Our team will get back to you shortly.
      </p>
      <a
        href="/"
        class="mt-8 flex w-fit cursor-pointer items-center space-x-2 self-center rounded-lg border-2 border-black bg-black px-4 py-2 font-medium text-white transition hover:bg-white hover:text-black"
        >Go back</a
      >
    </div>
  </main>
</Layout>
