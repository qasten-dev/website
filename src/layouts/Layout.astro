---
import BackgroundStripes from "@/components/BackgroundStripes.astro";
import "@/styles/global.css";
import { locales } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

const { currentLocale } = Astro;
const { pathname } = Astro.url;

const localeFreePathname = pathname.startsWith(`/${currentLocale}/`)
  ? pathname.replace(`/${currentLocale}`, "")
  : pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>Qasten</title>
  </head>
  <body class="font-inter">
    <BackgroundStripes />
    <slot />

    <div class="py-12">
      <select
        class="mx-auto block w-full max-w-16 rounded-lg border border-slate-200 bg-slate-50 p-2.5 text-sm focus:border-2 focus:border-black"
        onchange="location = this.value"
      >
        {
          locales.map((locale) => (
            <option
              value={getRelativeLocaleUrl(locale, localeFreePathname)}
              selected={locale === currentLocale}
            >
              {locale.toUpperCase()}
            </option>
          ))
        }
      </select>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
