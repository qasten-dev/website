---
import BackgroundStripes from "@/components/BackgroundStripes.astro";
import FaviconLinks from "@/components/FaviconLinks.astro";
import LanguageButton from "@/components/LanguageButton.astro";
import Logo from "@/components/Logo.astro";
import "@/styles/global.css";
import { getRedirectUrl, SUBSCRIBE_FORM_URL } from "@/utils/forms";
import { getSafeCurrentLocale, getTranslations } from "@/utils/i18n";
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";
import path from "path";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);
const t = getTranslations(currentLocale);

const subscribeSuccessUrl = getRedirectUrl({
  path: "subscription-success",
  url: Astro.url,
  site: Astro.site,
  currentLocale,
});

const contactUsURL = getRelativeLocaleUrl(
  currentLocale,
  "/#book-call",
).replace(/\/$/, "");

const { noBackground } = Astro.props;

const {
  title = "Qasten",
  description = "Qasten is the AI workspace for teams.",
  openGraphMetadata,
  author,
} = Astro.props;

const openGraphImageURL = new URL(
  openGraphMetadata?.imageRelativePath ?? "/qasten-16x9.png",
  Astro.site,
).toString();

const fontFilesGlob = import.meta.glob("/public/fonts/*.woff2", {
  eager: true,
  query: "?url",
  import: "default",
});
const fontFiles = Object.keys(fontFilesGlob).map((file) => path.basename(file));

const navItems = [
  { label: t.nav.offers, href: "#offers" },
  { label: t.nav.integrations, href: "#integrations" },
  { label: t.nav.whyQasten, href: "#why-qasten" },
  { label: t.nav.faq, href: "#faq" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content={openGraphMetadata?.type ?? "website"} />
    <meta property="og:site_name" content="Qasten" />
    <meta property="og:image" content={openGraphImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="675" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Qastencom" />
    {author && <meta name="author" content={author} />}

    <FaviconLinks />

    <link rel="sitemap" href="/sitemap-index.xml" />

    {
      fontFiles.map((file) => (
        <link
          rel="preload"
          href={`/fonts/${file}`}
          as="font"
          type="font/woff2"
          crossorigin
        />
      ))
    }

    <title>{title}</title>

    {
      import.meta.env.PROD && (
        <script
          defer
          src="/stats.js"
          data-website-id="519a270a-0b23-4c6e-8109-8697adc1826f"
        />
      )
    }
    <script
      type="text/javascript"
      src="https://app.lemlist.com/api/visitors/tracking?k=v7XsBnqRtkr1K08oY9a035A9Dq9o5BWM4xAY8ZeBf0A%3D&t=tea_KK7uf4qxXLcLuM2Jy"
    ></script>
  </head>

  <body
    class="text-foreground selection:bg-primary selection:text-primary-foreground bg-background font-inter flex min-h-screen flex-col overflow-x-hidden"
  >
    {!noBackground && <BackgroundStripes />}
    <header
      class="sticky top-0 z-50 backdrop-blur-md bg-background/80 border-b border-border/40 shadow-sm"
    >
      <div class="mx-auto flex w-full max-w-7xl items-center justify-between px-6 py-4">
        <div class="flex-1">
          <a
            class="group flex cursor-pointer items-center space-x-2.5 transition-opacity hover:opacity-80"
            href={getRelativeLocaleUrl(currentLocale, "/")}
            ><Logo width={42} height={42} /><span
              class="text-2xl font-bold tracking-tight">Qasten</span
            ></a
          >
        </div>

        <nav class="hidden items-center space-x-2 font-medium md:flex lg:space-x-4">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="hover:bg-secondary hover:text-foreground rounded-lg px-4 py-2.5 transition-all text-muted-foreground"
            >
              {item.label}
            </a>
          ))}
        </nav>

        <div class="hidden flex-1 justify-end sm:flex">
          <a
            class="bg-primary hover:bg-primary/90 text-primary-foreground flex w-fit cursor-pointer items-center rounded-lg px-5 py-2.5 font-semibold shadow-md transition-all hover:shadow-lg hover:scale-105"
            href={contactUsURL}
          >
            {t.contactUs}
          </a>
        </div>

        <button
          id="hamburger"
          aria-label="Open menu"
          class="flex cursor-pointer flex-col space-y-1.5 hover:space-y-2 sm:hidden transition-all p-2 rounded-lg hover:bg-secondary"
        >
          <span class="bg-foreground h-0.5 w-6 rounded-full"></span>
          <span class="bg-foreground h-0.5 w-6 rounded-full"></span>
          <span class="bg-foreground h-0.5 w-6 rounded-full"></span>
        </button>
      </div>
    </header>

      <div
        id="mobile-menu"
        class="dark text-foreground bg-background/95 backdrop-blur-lg fixed inset-0 z-50 hidden h-screen w-screen"
      >
        <button
          id="close-mobile-menu-button"
          class="absolute top-6 right-6 cursor-pointer text-5xl hover:text-primary transition-colors rounded-full w-14 h-14 flex items-center justify-center hover:bg-secondary"
        >
          &times;
        </button>
        <nav
          class="flex h-screen flex-col items-center justify-center space-y-10 text-3xl font-bold px-8"
        >
          {navItems.map((item) => (
            <a href={item.href} class="hover:text-primary transition-colors hover:scale-105 transform"> {item.label} </a>
          ))}
          <a href={contactUsURL} class="bg-primary text-primary-foreground px-8 py-4 rounded-xl hover:bg-primary/90 transition-all shadow-lg hover:shadow-xl"> {t.contactUs} </a>
          <div class="flex gap-3 pt-4">
            <LanguageButton locale="en" size="lg" />
          </div>
        </nav>
      </div>
    </header>

    <slot />

    <!-- Force sticky footer -->
    <main class="flex-1"></main>
    <footer class="dark text-foreground bg-gradient-to-b from-background to-secondary/20 mx-auto mt-32 w-full border-t border-border/40">
      <div class="mx-auto max-w-7xl px-6 py-16">
        <div class="flex flex-col gap-12 md:flex-row md:justify-between md:gap-24">
          <div>
            <a
              href={getRelativeLocaleUrl(currentLocale, "/")}
              class="group flex items-center space-x-2.5 transition-opacity hover:opacity-80"
              ><Logo width={42} height={42} /><span
                class="text-2xl font-bold tracking-tight">Qasten</span
              ></a
            >
            <p class="text-muted-foreground mt-3 text-sm font-medium sm:text-base">
              {t.footer.eu} ðŸ‡ªðŸ‡º
            </p>
            <ul class="text-foreground/70 mt-10 space-y-4 text-sm font-medium">
              <li>
                <a href={contactUsURL} class="hover:text-foreground transition-colors hover:underline underline-offset-4"
                  >{t.contactUs}</a
                >
              </li>
              <li>
                <a
                  href="https://www.linkedin.com/company/qasten"
                  target="_blank"
                  rel="noopener"
                  class="hover:text-foreground transition-colors hover:underline underline-offset-4">LinkedIn</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="mx-auto mt-12 flex items-center justify-between border-t border-border/40 pt-8">
          <div class="text-muted-foreground text-xs font-medium sm:text-sm">
            {t.footer.copyright}
          </div>
          <div class="flex gap-2">
            <LanguageButton locale="en" />
            <LanguageButton locale="fr" />
          </div>
        </div>
      </div>
    </footer>

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>

    <script>
      function main() {
        const hamburger = document.getElementById("hamburger");
        const mobileMenu = document.getElementById("mobile-menu");
        const closeMobileMenuBtn = document.getElementById(
          "close-mobile-menu-button",
        );

        if (!hamburger || !mobileMenu || !closeMobileMenuBtn) {
          console.warn("Could not find selector for mobile menu");
          return;
        }

        const toggleOpen = () => {
          mobileMenu.classList.toggle("hidden");
          document.body.classList.toggle("overflow-hidden"); // Disable scrolling through menu
        };

        hamburger.addEventListener("click", toggleOpen);
        closeMobileMenuBtn.addEventListener("click", toggleOpen);
      }

      main();
    </script>
  </body>
</html>
