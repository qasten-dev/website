---
import BackgroundStripes from "@/components/BackgroundStripes.astro";
import "@/styles/global.css";
import { getRedirectUrl, SUBSCRIBE_FORM_URL } from "@/utils/forms";
import { getSafeCurrentLocale, getTranslations, locales } from "@/utils/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);
const t = getTranslations(currentLocale);

const { pathname } = Astro.url;

const localeFreePathname = pathname.startsWith(`/${currentLocale}/`)
  ? pathname.replace(`/${currentLocale}`, "")
  : pathname;

const subscribeSuccessUrl = getRedirectUrl({
  path: "subscription-success",
  url: Astro.url,
  site: Astro.site,
  currentLocale,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>Qasten</title>
  </head>

  <body class="font-inter flex min-h-screen flex-col">
    <BackgroundStripes />
    <slot />

    <!-- Force sticky footer -->
    <main class="flex-1"></main>
    <footer class="mx-auto mt-48 w-full max-w-5xl pb-4">
      <div class="mx-auto flex justify-between gap-24 px-4">
        <div>
          <h3 class="mb-4 font-semibold">Qasten</h3>
          <ul class="space-y-4 text-sm text-gray-500">
            <li>
              <a
                href={getRelativeLocaleUrl(currentLocale, "#contact-us")}
                class="hover:text-black">{t.contactUs}</a
              >
            </li>
            <li>
              <a href="#" class="hover:text-black">{t.aboutUs}</a>
            </li>
            <li>
              <a href="#" class="hover:text-black">Blog</a>
            </li>
            <li>
              <a
                href="https://www.linkedin.com/company/qasten"
                target="_blank"
                rel="noopener"
                class="hover:text-black">LinkedIn</a
              >
            </li>
          </ul>
        </div>

        <div>
          <h3 class="font-semibold">{t.footer.stayUpdated}</h3>
          <p class="mt-2 text-sm text-gray-500">
            {t.footer.subscribeCta}
          </p>
          <form class="mt-4 flex" action={SUBSCRIBE_FORM_URL} method="post">
            <input type="hidden" name="_redirect" value={subscribeSuccessUrl} />

            <input
              type="email"
              name="email"
              placeholder={t.footer.emailPlaceholder}
              class="w-full rounded-l-md bg-white px-3 py-1.5 text-sm/6 text-gray-600 outline-1 -outline-offset-1 outline-slate-300 focus:outline-2 focus:-outline-offset-2 focus:outline-black"
            />
            <button
              type="submit"
              class="cursor-pointer rounded-r-md bg-black px-4 py-2 font-medium text-white transition hover:bg-slate-300 hover:text-black"
            >
              Subscribe
            </button>
          </form>
          <div class="mt-8 flex items-center gap-4">
            <label for="language-select" class="text-sm font-medium"
              >{t.footer.languageLabel}</label
            >
            <select
              class="block rounded-lg border border-slate-300 bg-slate-100 p-2 text-sm focus:border-2 focus:border-black"
              id="language-select"
              onchange="location = this.value"
            >
              {
                locales.map((locale) => (
                  <option
                    value={getRelativeLocaleUrl(locale, localeFreePathname)}
                    selected={locale === currentLocale}
                  >
                    {locale.toUpperCase()}
                  </option>
                ))
              }
            </select>
          </div>
        </div>
      </div>

      <div
        class="mx-auto mt-4 max-w-6xl border-t border-gray-200 pt-4 text-center text-sm text-gray-500"
      >
        {t.footer.copyright}
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
