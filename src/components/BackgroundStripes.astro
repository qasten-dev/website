---
const opacities = [
  15, 15, 5, 10, 5, 10, 15, 10, 10, 5, 10, 10, 5, 15, 10, 5, 10, 10, 15, 5, 10,
  10, 10,
];
const opacitiesClasses = opacities.map((opacity) => {
  switch (opacity) {
    case 5:
      return "opacity-5";
    case 10:
      return "opacity-10";
    default:
      return "opacity-15";
  }
});
---

<div
  class="pointer-events-none fixed -z-30 grid h-full w-screen grid-cols-12 grid-rows-1 opacity-40 md:grid-cols-23"
>
  {
    opacitiesClasses.map((opacityClass) => (
      <div
        class={`via-primary/10 from-transparent to-transparent w-px justify-self-center bg-linear-to-b from-10% to-90% ${opacityClass}`}
      />
    ))
  }
</div>
