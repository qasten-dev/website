---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getTranslations, getSafeCurrentLocale } from "@/utils/i18n";
import { Icon } from "astro-icon/components";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);
const t = getTranslations(currentLocale);

const { title, subtitle } = Astro.props;
---

<div class="p-8">
  <div
    class="mx-auto mt-24 flex max-w-2xl flex-col gap-y-4 rounded-lg px-2 py-8 text-center"
  >
    <h1 class="text-4xl font-semibold">{title}</h1>
    <p class="text-muted-foreground mt-4 text-lg font-medium">
      {subtitle}<br />{t.checkBlog}
    </p>
    <a
      href={getRelativeLocaleUrl(currentLocale, "/blog")}
      class="bg-primary/85 border-primary/85 hover:bg-primary hover:border-primary text-primary-foreground mt-8 flex w-fit cursor-pointer items-center space-x-2 self-center rounded-md border-2 bg-clip-padding px-4 py-2 font-medium transition"
      >Blog

      <Icon name="mdi:arrow-right" class="ml-2" />
    </a>
  </div>
</div>
