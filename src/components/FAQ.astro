---
import { Icon } from "astro-icon/components";

type FAQ = {
  question: string;
  answer: string;
}[];

const { faq } = Astro.props as { faq: FAQ };
---

<div class="divide-y divide-slate-200">
  {
    faq.map(({ question, answer }) => (
      <details class="group">
        <summary class="flex cursor-pointer items-center justify-between py-6 text-lg font-medium text-black">
          {question}
          <Icon
            name="mdi:keyboard-arrow-down"
            size="32"
            class="ml-2 transition-transform duration-300 group-open:rotate-180"
          />
        </summary>
        <p class="prose max-w-none pb-6 text-gray-600" set:html={answer} />
      </details>
    ))
  }
</div>
