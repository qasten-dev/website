---
import { Image } from "astro:assets";
const { feature, image, imageLeft } = Astro.props;
---

<div
  class="mx-4 grid grid-cols-1 items-center gap-x-16 gap-y-8 sm:mx-8 md:grid-cols-2"
>
  <div class={imageLeft ? "md:order-2" : ""}>
    <h3 class="text-3xl font-bold">{feature.title}</h3>
    <p
      class="prose text-muted-foreground mt-6 leading-relaxed sm:text-lg"
      set:html={feature.body}
    />
  </div>
  <Image src={image} alt="" class="max-h-96 min-h-50 w-full object-contain" />
</div>
