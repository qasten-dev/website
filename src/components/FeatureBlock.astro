---
import { Image } from "astro:assets";
const { title, image, imageLeft, body } = Astro.props;
---

<div class="mx-8 grid grid-cols-1 items-center gap-x-16 gap-y-8 md:grid-cols-2">
  <div class={imageLeft ? "md:order-2" : ""}>
    <h3 class="text-3xl font-bold text-black">{title}</h3>
    <p class="mt-6 text-lg leading-relaxed text-gray-600" set:html={body} />
  </div>
  <Image
    src={image}
    alt=""
    class="min-h-80 w-full rounded-2xl object-cover shadow-lg"
  />
</div>
