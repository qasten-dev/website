---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import hero from "@/assets/hero.png";
import unified from "@/assets/unified.svg";
import consensus from "@/assets/consensus.svg";
import tree from "@/assets/tree.svg";
import security from "@/assets/security.svg";
import { team as founders } from "@/utils/team";

import FeatureBlock from "@/components/FeatureBlock.astro";
import { Icon } from "astro-icon/components";
import { getTranslations } from "@/utils/i18n";
import { CONTACT_FORM_URL, getRedirectUrl } from "@/utils/forms";
import { getPosts, topics } from "@/utils/blog";
import BlogGrid from "../BlogGrid.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getSafeCurrentLocale } from "@/utils/i18n";
import FAQ from "../FAQ.astro";
import Underline from "../Underline.astro";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);

const t = getTranslations(currentLocale);

const highlightedPostsSlugs = [
  "stop-treating-ai-like-a-commodity",
  "your-employees-are-smarter-than-your-ai-policy",
];
const posts = (await getPosts(currentLocale)).filter(({ id }) =>
  highlightedPostsSlugs.includes(id),
);

const contactSuccessUrl = getRedirectUrl({
  path: "contact-success",
  url: Astro.url,
  site: Astro.site,
  currentLocale,
});

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Qasten",
  legalName: "Qasten",
  url: "https://www.qasten.com",
  logo: "https://www.qasten.com/logo.png",
  foundingDate: "2025",
  founders: Object.values(founders).map((founder) => ({
    "@type": "Person",
    name: founder.displayName,
    url: founder.url,
  })),
  contactPoint: [
    {
      "@type": "ContactPoint",
      email: "contact@qasten.com",
    },
  ],
  sameAs: [
    "https://www.linkedin.com/company/qasten",
    "https://x.com/qastencom",
    "https://github.com/qasten-dev",
    "https://www.crunchbase.com/organization/qasten",
    "https://www.saashub.com/qasten",
  ],
  description: t.metaDescription.home,
  keywords: [
    "AI collaboration",
    "AI workspace",
    "AI platform",
    "AI governance",
    "AI compliance",
    "AI security",
    "AI adoption",
    "AI productivity",
    "AI risk",
    "AI workflows",
    "AI knowledge base",
    "Enterprise AI",
    "Shadow AI",
    "Private AI",
    "Internal AI",
  ],
  knowsAbout: Object.values(topics).map((topic) => ({
    "@type": "Thing",
    name: topic.en,
    sameAs: topic.wikidata,
  })),
};
---

<Layout
  title={"Qasten - " + t.hero.title.full}
  description={t.metaDescription.home}
>
  <main class="mx-auto w-full max-w-6xl">
    <div class="relative px-4 pt-24 text-center">
      <div class="hidden sm:block">
        <div class="absolute -z-20 h-full w-full"></div>
        <div
          class="dotted-background pointer-events-none absolute inset-0 -z-10"
        >
          <div class="to-background absolute h-full w-full bg-radial from-40%">
          </div>
        </div>
      </div>

      <div class="fade-in-up flex flex-col items-center">
        <h1 class="text-6xl leading-tight font-bold lg:text-8xl">
          <span set:html={t.hero.title.preUnderline} />
          <span class="relative inline-block">
            {t.hero.title.underline}
            <span aria-hidden="true" class="block h-6 overflow-visible">
              <Underline />
            </span>
          </span>
          <span set:html={t.hero.title.postUnderline} />
        </h1>

        <p
          class="text-muted-foreground mt-12 max-w-4xl text-xl leading-relaxed"
        >
          {t.hero.subtitle.firstLine}
        </p>

        <p
          class="text-muted-foreground mt-2 max-w-4xl text-xl leading-relaxed font-semibold"
        >
          {t.hero.subtitle.secondLine}
        </p>

        <div class="mt-6 flex items-center space-x-4">
          <a
            class="bg-primary border-primary hover:bg-primary/90 hover:border-primary/90 text-primary-foreground flex cursor-pointer items-center rounded-md border-2 bg-clip-padding px-4 py-2 font-medium transition"
            href="https://app.qasten.com"
            target="_blank"
            rel="noopener noreferrer"
          >
            {t.startUsingNow}
          </a>
          <a
            class="bg-secondary/60 hover:bg-secondary border-border text-secondary-foreground flex w-fit cursor-pointer items-center rounded-md border-2 px-4 py-2 font-medium transition"
            href="#contact-us"
          >
            {t.contactUs}
          </a>
        </div>
      </div>
    </div>

    <div
      class="relative left-1/2 mt-8 hidden max-w-none -translate-x-1/2 px-4 md:block 2xl:w-[75vw]"
    >
      <Image src={hero} alt="" priority class="fade-in-up mx-auto" />
    </div>

    <section
      class="dark bg-background text-foreground relative left-1/2 mt-12 w-screen -translate-x-1/2 px-4 py-24 text-center"
    >
      <h2
        class="text-4xl font-semibold sm:text-5xl"
        set:html={t.bridge.title}
      />

      <p
        class="text-muted-foreground mx-auto mt-12 max-w-3xl text-lg sm:text-xl"
        set:html={t.bridge.subtitle1}
      />
      <p
        class="mx-auto mt-12 max-w-4xl text-lg font-semibold sm:text-xl"
        set:html={t.bridge.subtitle2}
      />
    </section>

    <section>
      <div class="mt-36 space-y-36">
        <FeatureBlock feature={t.features.unification} image={unified} />
        <FeatureBlock
          feature={t.features.consensus}
          image={consensus}
          imageLeft
        />
        <FeatureBlock feature={t.features.graph} image={tree} />
        <FeatureBlock
          feature={t.features.security}
          image={security}
          imageLeft
        />
      </div>
    </section>

    <section class="mx-auto mt-24 px-4 py-24 sm:px-8">
      <h2 class="mb-12 text-center text-5xl font-semibold">
        {t.deepDives}
      </h2>

      <BlogGrid posts={posts} numCols={2} />

      <a
        class="bg-primary/85 hover:bg-primary text-primary-foreground mx-auto mt-12 flex w-fit cursor-pointer items-center space-x-2 rounded-md px-6 py-3 font-medium transition"
        href={getRelativeLocaleUrl(currentLocale, "blog")}
      >
        {t.seeMore}
      </a>
    </section>

    <section class="mx-auto mt-48 max-w-4xl px-4 sm:px-8">
      <h2 class="text-center text-4xl font-semibold">
        {t.faq.title}
      </h2>
      <p class="text-muted-foreground mt-2 text-center text-lg">
        {t.faq.subtitle}
      </p>

      <div class="mt-12">
        <FAQ faq={t.faq.content} />
      </div>
    </section>

    <div class="mx-auto mt-24 px-4 pt-12 sm:px-8" id="contact-us">
      <form
        action={CONTACT_FORM_URL}
        method="post"
        class="border-border/50 bg-background mx-auto max-w-2xl rounded-md border p-4 shadow-sm hover:shadow-md sm:p-8"
      >
        <input type="hidden" name="_redirect" value={contactSuccessUrl} />
        <input
          type="checkbox"
          name="hnpot"
          class="hidden"
          tabindex="-1"
          autocomplete="off"
        />

        <h3 class="text-center text-3xl font-semibold tracking-tight">
          {t.contactUs}
        </h3>

        <label for="fullName" class="mt-12 block text-sm font-medium"
          >Full name</label
        >
        <input
          name="fullName"
          id="fullName"
          required
          class="border-border focus:ring-primary mt-2 w-full rounded-md border px-4 py-2 transition focus:ring-2 focus:outline-none"
        />

        <label for="email" class="mt-4 block text-sm font-medium">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          required
          class="border-border focus:ring-primary mt-2 w-full rounded-md border px-4 py-2 transition focus:ring-2 focus:outline-none"
        />

        <label for="message" class="mt-4 block text-sm font-medium"
          >Message</label
        >
        <textarea
          name="message"
          id="message"
          rows="5"
          required
          class="border-border focus:ring-primary mt-2 w-full rounded-md border px-4 py-3 transition focus:ring-2 focus:outline-none"
        ></textarea>

        <button
          type="submit"
          class="bg-primary/85 text-primary-foreground hover:bg-primary mx-auto mt-6 flex cursor-pointer items-center gap-2 rounded-md px-4 py-2 font-medium shadow-sm transition"
        >
          {t.send}
          <Icon name="mdi:send" />
        </button>
      </form>
    </div>
  </main>

  <style>
    .dotted-background {
      background-image:
        radial-gradient(var(--secondary) 1px, transparent 1px),
        radial-gradient(var(--secondary) 1px, transparent 1px);
      background-position:
        0 0,
        12px 12px;
      background-size: 24px 24px;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-up {
      animation: fadeInUp 1s ease-out;
    }
  </style>

  {
    currentLocale === "en" && (
      <script
        type="application/ld+json"
        set:html={JSON.stringify(structuredData)}
      />
    )
  }
</Layout>
