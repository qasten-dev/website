      <div class="mb-16 text-center">
        <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.whyChoose.title}</h2>
        <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
          {p.whyChoose.subtitle}
        </p>
      </div>
      
      <div class="bg-card rounded-2xl border shadow-xl p-8 sm:p-10">
        <div class="grid gap-8 md:grid-cols-2 items-start">
          <div>
            <div class="mb-5 flex items-center gap-3 h-10">
              <Logo width={40} height={40} />
              <h3 class="text-2xl font-semibold">Qasten</h3>
            </div>
            <ul class="space-y-3">
              {p.whyChoose.qasten.map((item: string) => (
                <li class="flex items-start gap-3">
                  <Icon name="mdi:check-circle" class="text-primary mt-0.5 shrink-0 text-xl" />
                  <span class="text-base">{item}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div>
            <div class="mb-5 flex items-center h-10">
              <h3 class="text-2xl font-semibold text-muted-foreground">{p.whyChoose.othersTitle}</h3>
            </div>
            <ul class="space-y-3 text-muted-foreground">
              {p.whyChoose.others.map((item: string) => (
                <li class="flex items-start gap-3">
                  <Icon name="mdi:close-circle" class="mt-0.5 shrink-0 text-xl" />
                  <span class="text-base">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Booking Form Section -->
    <section id="book-call" class="mx-auto w-full max-w-4xl px-4 py-32 sm:px-6">
      <div class="mb-12 text-center">
        <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.booking.title}</h2>
        <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
          {p.booking.subtitle}
        </p>
      </div>
      
      <div class="bg-card rounded-2xl border shadow-xl p-10 sm:p-12">
        <form class="space-y-6" action="#" method="post">
          <div>
            <label for="fullName" class="mb-2 block text-sm font-semibold">{p.booking.fullName}</label>
        <input
              type="text"
              id="fullName"
          name="fullName"
          required
              class="border-border bg-background focus:ring-primary w-full rounded-lg border-2 px-4 py-3 text-base transition focus:ring-2 focus:outline-none"
        />
          </div>

          <div>
            <label for="email" class="mb-2 block text-sm font-semibold">{p.booking.email}</label>
        <input
              type="email"
              id="email"
          name="email"
          required
              class="border-border bg-background focus:ring-primary w-full rounded-lg border-2 px-4 py-3 text-base transition focus:ring-2 focus:outline-none"
            />
          </div>
          
          <div>
            <label for="company" class="mb-2 block text-sm font-semibold">{p.booking.company}</label>
            <input
              type="text"
              id="company"
              name="company"
              class="border-border bg-background focus:ring-primary w-full rounded-lg border-2 px-4 py-3 text-base transition focus:ring-2 focus:outline-none"
            />
          </div>
          
          <div>
            <label for="message" class="mb-2 block text-sm font-semibold">{p.booking.message}</label>
        <textarea
              id="message"
          name="message"
          rows="5"
              class="border-border bg-background focus:ring-primary w-full rounded-lg border-2 px-4 py-3 text-base transition focus:ring-2 focus:outline-none"
        ></textarea>
          </div>

        <button
          type="submit"
            class="bg-primary hover:bg-primary/90 text-primary-foreground group w-full rounded-lg px-6 py-4 text-base font-semibold shadow-lg transition-all hover:scale-[1.02] hover:shadow-xl"
        >
            {p.booking.submit}
        </button>
          
          <p class="text-muted-foreground text-center text-sm">
            {p.booking.fallback}<a href="#book-call" class="text-primary font-medium underline hover:no-underline">{p.booking.fallbackLink}</a>
          </p>
      </form>
    </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-gradient-to-b from-secondary/20 to-secondary/40 relative left-1/2 w-screen -translate-x-1/2 py-32">
      <div class="mx-auto w-full max-w-4xl px-4 sm:px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.faq.title}</h2>
        </div>
        <div class="bg-card rounded-2xl border shadow-xl p-8 sm:p-12">
          <FAQ faq={faqData} />
        </div>
      </div>
    </section>
  </main>
</Layout>
