---
import Layout from "@/layouts/Layout.astro";
import FAQ from "@/components/FAQ.astro";
import Logo from "@/components/Logo.astro";
import { Icon } from "astro-icon/components";
import { getSafeCurrentLocale, getTranslations } from "@/utils/i18n";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);
const t = getTranslations(currentLocale);
const p = t.homePage;

const faqData = p.faq.questions;
---

<Layout
  title={p.meta.title}
  description={p.meta.description}
  noBackground={true}
>
  <main class="w-full">
    <!-- Hero Section -->
    <section class="relative mx-auto w-full max-w-7xl px-4 pt-16 pb-24 text-center sm:px-6 lg:pt-20 lg:pb-32">
      <div class="relative">
        <h1 class="mx-auto mb-6 max-w-4xl text-3xl font-bold leading-tight tracking-tight sm:text-4xl lg:text-5xl lg:leading-[1.15]">
          {p.hero.titleStart}<span class="text-primary">{p.hero.highlight}</span>{p.hero.titleEnd}
        </h1>
        
        <p class="text-muted-foreground mx-auto mb-10 max-w-3xl text-xl leading-relaxed sm:text-2xl">
          {p.hero.subtitle}
        </p>
        
        <div class="flex flex-col items-center justify-center gap-3">
          <a
            href="#book-call"
            class="bg-primary hover:bg-primary/90 text-primary-foreground group flex w-fit cursor-pointer items-center gap-2 rounded-lg px-8 py-4 text-base font-semibold shadow-lg transition-all hover:scale-105 hover:shadow-xl"
          >
            {p.hero.cta}
            <Icon name="mdi:arrow-right" class="transition-transform group-hover:translate-x-1" />
          </a>
          <p class="text-muted-foreground/70 text-sm flex items-center gap-1.5">
            <Icon name="mdi:clock-outline" class="text-sm" />
            {p.hero.ctaSubtext}
          </p>
        </div>
      </div>
      
      <div class="mt-20 grid grid-cols-1 gap-6 sm:grid-cols-3 items-stretch">
        <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1 flex flex-col items-center text-center h-full">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-2xl transition-transform group-hover:scale-110">
            <Icon name="mdi:tools" />
          </div>
          <h3 class="mb-2 text-lg font-semibold">{p.cards.custom.title}</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">{p.cards.custom.description}</p>
        </div>
        <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1 flex flex-col items-center text-center h-full">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-2xl transition-transform group-hover:scale-110">
            <Icon name="mdi:rocket-launch" />
          </div>
          <h3 class="mb-2 text-lg font-semibold">{p.cards.deployed.title}</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">{p.cards.deployed.description}</p>
        </div>
        <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1 flex flex-col items-center text-center h-full">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-2xl transition-transform group-hover:scale-110">
            <Icon name="mdi:shield-check" />
          </div>
          <h3 class="mb-2 text-lg font-semibold">{p.cards.trusted.title}</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">{p.cards.trusted.description}</p>
        </div>
      </div>
    </section>

    <!-- Customer Stories Section -->
    <section class="bg-gradient-to-b from-secondary/20 to-secondary/40 relative left-1/2 w-screen -translate-x-1/2 py-32">
      <div class="mx-auto w-full max-w-7xl px-4 sm:px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
            {p.stories.title}
          </h2>
          <p class="text-muted-foreground mx-auto max-w-3xl text-xl leading-relaxed">
            {p.stories.subtitle}
          </p>
        </div>
        
        <div class="bg-card rounded-2xl border shadow-xl p-12">
          <h3 class="mb-12 text-center text-3xl font-semibold">{p.stories.impactTitle}</h3>
          <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
            <div class="text-center">
              <p class="mb-2 text-4xl font-bold text-primary">{p.stories.currency}</p>
              <p class="text-muted-foreground text-base font-medium">{p.stories.stats.costs}</p>
            </div>
            <div class="text-center">
              <p class="mb-2 text-4xl font-bold text-primary">60+</p>
              <p class="text-muted-foreground text-base font-medium">{p.stories.stats.hours}</p>
            </div>
            <div class="text-center">
              <p class="mb-2 text-4xl font-bold text-primary">3.5X</p>
              <p class="text-muted-foreground text-base font-medium">{p.stories.stats.roi}</p>
            </div>
            <div class="text-center">
              <p class="mb-2 text-4xl font-bold text-primary">30</p>
              <p class="text-muted-foreground text-base font-medium">{p.stories.stats.days}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Solutions Section -->
    <section class="mx-auto w-full max-w-7xl px-4 py-32 sm:px-6">
      <div class="mb-16 text-center">
        <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.solutions.title}</h2>
        <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
          {p.solutions.subtitle}
        </p>
      </div>
      
      <div class="mt-16 grid gap-8 md:grid-cols-3">
        <div class="bg-card hover:shadow-xl group relative overflow-hidden rounded-2xl border p-10 transition-all hover:-translate-y-2">
          <div class="absolute right-0 top-0 h-32 w-32 rounded-bl-full bg-primary/5"></div>
          <div class="relative mb-6 flex h-16 w-16 items-center justify-center rounded-xl bg-primary/10 text-primary text-3xl transition-transform group-hover:scale-110">
            <Icon name="mdi:phone" />
          </div>
          <h3 class="mb-4 text-2xl font-semibold">{p.solutions.voice.title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {p.solutions.voice.description}
          </p>
        </div>
        
        <div class="bg-card hover:shadow-xl group relative overflow-hidden rounded-2xl border p-10 transition-all hover:-translate-y-2">
          <div class="absolute right-0 top-0 h-32 w-32 rounded-bl-full bg-primary/5"></div>
          <div class="relative mb-6 flex h-16 w-16 items-center justify-center rounded-xl bg-primary/10 text-primary text-3xl transition-transform group-hover:scale-110">
            <Icon name="mdi:chart-line" />
          </div>
          <h3 class="mb-4 text-2xl font-semibold">{p.solutions.sales.title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {p.solutions.sales.description}
          </p>
        </div>
        
        <div class="bg-card hover:shadow-xl group relative overflow-hidden rounded-2xl border p-10 transition-all hover:-translate-y-2">
          <div class="absolute right-0 top-0 h-32 w-32 rounded-bl-full bg-primary/5"></div>
          <div class="relative mb-6 flex h-16 w-16 items-center justify-center rounded-xl bg-primary/10 text-primary text-3xl transition-transform group-hover:scale-110">
            <Icon name="mdi:message-text" />
          </div>
          <h3 class="mb-4 text-2xl font-semibold">{p.solutions.chat.title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {p.solutions.chat.description}
          </p>
        </div>
      </div>
      
      <div class="mt-16 text-center">
        <a
          href="#book-call"
          class="bg-primary hover:bg-primary/90 text-primary-foreground group inline-flex cursor-pointer items-center gap-2 rounded-lg px-8 py-4 text-base font-semibold shadow-lg transition-all hover:scale-105 hover:shadow-xl"
        >
          {p.hero.cta}
          <Icon name="mdi:arrow-right" class="transition-transform group-hover:translate-x-1" />
        </a>
    </div>

      <p class="text-muted-foreground mt-8 text-center text-base">
        {p.solutions.footer}
      </p>
    </section>

    <!-- Benefits Section -->
    <section class="bg-gradient-to-b from-secondary/20 to-secondary/40 relative left-1/2 w-screen -translate-x-1/2 py-32">
      <div class="mx-auto w-full max-w-7xl px-4 sm:px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.benefits.title}</h2>
          <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
            {p.benefits.subtitle}
          </p>
        </div>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
          <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-xl transition-transform group-hover:scale-110">
              <Icon name="mdi:hammer-wrench" />
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.benefits.custom.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.benefits.custom.description}
            </p>
          </div>
          
          <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-xl transition-transform group-hover:scale-110">
              <Icon name="mdi:lock" />
    </div>
            <h3 class="mb-3 text-xl font-semibold">{p.benefits.ownership.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.benefits.ownership.description}
      </p>
    </div>

          <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-xl transition-transform group-hover:scale-110">
              <Icon name="mdi:link-variant" />
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.benefits.integrated.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.benefits.integrated.description}
            </p>
          </div>
          
          <div class="bg-card hover:shadow-lg group rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary text-xl transition-transform group-hover:scale-110">
              <Icon name="mdi:chart-timeline-variant" />
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.benefits.results.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.benefits.results.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Integrations Section -->
    <section class="mx-auto w-full max-w-7xl px-4 py-20 sm:px-6">
      <div class="mb-10 text-center">
        <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.integrations.title}</h2>
        <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
          {p.integrations.subtitle}
        </p>
      </div>
      
      <div class="relative mx-auto aspect-square w-full max-w-xs sm:max-w-sm md:max-w-md">
        <!-- SVG for concentric waves and outer circle -->
        <svg class="absolute inset-0 h-full w-full" viewBox="0 0 400 400" style="pointer-events: none; z-index: 0;">
          <defs>
            <style>
              @keyframes ripple {
                0% {
                  r: 20;
                  opacity: 0.25;
                }
                100% {
                  r: 130;
                  opacity: 0;
                }
              }
              .wave-circle {
                fill: none;
                stroke: rgba(180, 83, 9, 0.3);
                stroke-width: 1.5;
                transform-origin: center;
                animation: ripple 4s ease-out infinite;
              }
              .wave-1 { animation-delay: 0s; }
              .wave-2 { animation-delay: 1s; }
              .wave-3 { animation-delay: 2s; }
              .wave-4 { animation-delay: 3s; }
            </style>
          </defs>
          
          <!-- Animated concentric wave circles emanating from center -->
          <circle cx="200" cy="200" r="20" class="wave-circle wave-1" />
          <circle cx="200" cy="200" r="20" class="wave-circle wave-2" />
          <circle cx="200" cy="200" r="20" class="wave-circle wave-3" />
          <circle cx="200" cy="200" r="20" class="wave-circle wave-4" />
          
          <!-- Main outer circle connecting all icons -->
          <circle cx="200" cy="200" r="140" fill="none" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          
          <!-- Short connector stubs from outer circle to icon positions -->
          <!-- Top -->
          <line x1="200" y1="60" x2="200" y2="40" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Top Right -->
          <line x1="299" y1="101" x2="313" y2="87" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Right -->
          <line x1="340" y1="200" x2="360" y2="200" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Bottom Right -->
          <line x1="299" y1="299" x2="313" y2="313" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Bottom -->
          <line x1="200" y1="340" x2="200" y2="360" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Bottom Left -->
          <line x1="101" y1="299" x2="87" y2="313" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Left -->
          <line x1="60" y1="200" x2="40" y2="200" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
          <!-- Top Left -->
          <line x1="101" y1="101" x2="87" y2="87" stroke="rgba(180, 83, 9, 0.15)" stroke-width="1.5" />
        </svg>
        
        <!-- Central Qasten Logo -->
        <div class="absolute left-1/2 top-1/2 z-10 -translate-x-1/2 -translate-y-1/2">
          <div class="bg-card rounded-2xl border-2 border-primary/20 p-3 shadow-lg sm:p-4">
            <Logo width={50} height={50} />
          </div>
        </div>
        
        <!-- Integration Icons arranged on the circle -->
        <!-- Using transform to position on a circle: 
             radius = 35% of container, center = 50%, 50%
             x = 50% + 35% * sin(angle)
             y = 50% - 35% * cos(angle)
        -->
        
        <!-- Top (0°) - HubSpot -->
        <div class="absolute z-20" style="left: 50%; top: 15%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="HubSpot">
            <img src="https://framerusercontent.com/images/NnDNSIod6BWGkVQ38VHOp6RUj0k.png?scale-down-to=512" alt="HubSpot" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Top Right (45°) - Zapier/Chain -->
        <div class="absolute z-20" style="left: 74.7%; top: 25.3%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Zapier">
            <img src="https://framerusercontent.com/images/Xsta0mwZKeKTikCD2mVKwrskkM.png?scale-down-to=512" alt="Zapier" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Right (90°) - Salesforce -->
        <div class="absolute z-20" style="left: 85%; top: 50%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Salesforce">
            <img src="https://framerusercontent.com/images/l2YE294N9X2zGAqj0zyCzQB7mSU.png?width=256&height=256" alt="Salesforce" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Bottom Right (135°) - Zendesk -->
        <div class="absolute z-20" style="left: 74.7%; top: 74.7%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Zendesk">
            <img src="https://framerusercontent.com/images/RwYsS46pMcFi4x7pHVuWRrlhEZk.png?width=240&height=240" alt="Zendesk" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Bottom (180°) - Figjam/Star -->
        <div class="absolute z-20" style="left: 50%; top: 85%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Figjam">
            <img src="https://framerusercontent.com/images/Iad8JtV4KapAZpGElrFJuQtySis.png?scale-down-to=512" alt="Figjam" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Bottom Left (225°) - Asana -->
        <div class="absolute z-20" style="left: 25.3%; top: 74.7%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Asana">
            <img src="https://framerusercontent.com/images/nxpAODZEqjUs4FzwjpRNJp65aIE.png?scale-down-to=512" alt="Asana" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Left (270°) - Dovetail -->
        <div class="absolute z-20" style="left: 15%; top: 50%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Dovetail">
            <img src="https://framerusercontent.com/images/Hx6csFB7V6BZkxRa8eqkqtu7yU.webp?width=250&height=343" alt="Dovetail" class="w-full h-full object-contain" />
          </div>
        </div>
        
        <!-- Top Left (315°) - Linear -->
        <div class="absolute z-20" style="left: 25.3%; top: 25.3%; transform: translate(-50%, -50%);">
          <div class="bg-white hover:shadow-lg group flex h-12 w-12 items-center justify-center rounded-xl border-2 shadow-md transition-all hover:scale-110 sm:h-14 sm:w-14 p-2" title="Linear">
            <img src="https://framerusercontent.com/images/Iyc9sejEbbhkc83GOBir6QGZnHs.png?width=400&height=400" alt="Linear" class="w-full h-full object-contain" />
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="bg-gradient-to-b from-secondary/20 to-secondary/40 relative left-1/2 w-screen -translate-x-1/2 py-32">
      <div class="mx-auto w-full max-w-7xl px-4 sm:px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">{p.howItWorks.title}</h2>
          <p class="text-muted-foreground mx-auto max-w-2xl text-xl leading-relaxed">
            {p.howItWorks.subtitle}
          </p>
        </div>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
          <div class="bg-card hover:shadow-lg group relative rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary text-xl font-bold transition-transform group-hover:scale-110">
              01
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.howItWorks.discovery.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.howItWorks.discovery.description}
            </p>
          </div>
          
          <div class="bg-card hover:shadow-lg group relative rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary text-xl font-bold transition-transform group-hover:scale-110">
              02
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.howItWorks.design.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.howItWorks.design.description}
            </p>
          </div>
          
          <div class="bg-card hover:shadow-lg group relative rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary text-xl font-bold transition-transform group-hover:scale-110">
              03
            </div>
            <h3 class="mb-3 text-xl font-semibold">{p.howItWorks.build.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {p.howItWorks.build.description}
            </p>
          </div>
          
          <div class="bg-card hover:shadow-lg group relative rounded-xl border p-8 transition-all hover:-translate-y-1">
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary text-xl font-bold transition-transform group-hover:scale-110">
