---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import farouk from "@/assets/farouk.png";
import youssef from "@/assets/youssef.png";
import achraf from "@/assets/achraf.jpeg";
import { Icon } from "astro-icon/components";
import { getSafeCurrentLocale, getTranslations } from "@/utils/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);

const t = getTranslations(currentLocale);
const modelNeutralityBlog = getRelativeLocaleUrl(
  currentLocale,
  `/blog/stop-treating-ai-like-a-commodity`,
);
const adoptionBlog = getRelativeLocaleUrl(
  currentLocale,
  `/blog/your-employees-are-smarter-than-your-ai-policy`,
);
---

<Layout>
  <main class="mx-auto mt-12 w-full max-w-6xl px-4">
    <section class="mt-8 text-center">
      <h1 class="text-6xl font-semibold">{t.about.title}</h1>
      <p class="mx-auto mt-8 max-w-2xl text-lg text-gray-600">
        {t.about.tagline}
      </p>
    </section>

    <section class="mt-24">
      <h2 class="text-center text-3xl font-semibold">{t.about.ourStory}</h2>
      <div class="text-base leading-relaxed text-gray-700">
        <p class="mt-12">
          {t.about.story[0]}
        </p>
        <p class="mt-8" set:html={t.about.story[1]} />
      </div>
    </section>

    <section class="mt-24">
      <h2 class="text-center text-3xl font-semibold">{t.about.ourBeliefs}</h2>
      <div class="mt-8 grid gap-4 lg:grid-cols-3">
        <div class="p-4">
          <h3 class="mt-2 inline-flex items-center text-xl font-semibold">
            <Icon name="mdi:swap-horizontal" class="mr-2 text-2xl" />
            {t.about.models.title}
          </h3>
          <p class="prose mt-2 text-gray-600">
            {t.about.models.body}
            <a href={modelNeutralityBlog}>{t.about.readPost}</a>
          </p>
        </div>
        <div class="p-4">
          <h3 class="mt-2 inline-flex items-center text-xl font-semibold">
            <Icon name="mdi:chart-line" class="mr-2 text-2xl" />

            {t.about.adoption.title}
          </h3>
          <p class="prose mt-2 text-gray-600">
            {t.about.adoption.body}
            <a href={adoptionBlog}>{t.about.readPost}</a>
          </p>
        </div>
        <div class="p-4">
          <h3 class="mt-2 inline-flex items-center text-xl font-semibold">
            <Icon name="mdi:people" class="mr-2 text-2xl" />

            {t.about.teams.title}
          </h3>
          <p class="prose mt-2 text-gray-600">
            {t.about.teams.body}
          </p>
        </div>
      </div>
    </section>

    <section class="mt-24">
      <h2 class="text-center text-3xl font-semibold">
        {t.about.meetTheFounders}
      </h2>
      <div class="mt-8 grid gap-8 md:grid-cols-3">
        <div class="p-6 text-center">
          <div class="mx-auto h-24 w-24 overflow-hidden rounded-full">
            <Image
              src={farouk}
              alt="Faiz Farouk"
              class="origin-top scale-120 rounded-full object-cover"
            />
          </div>
          <h3 class="mt-2 text-xl font-semibold">Faiz Farouk</h3>
          <p class="text-sm font-medium text-gray-500">CEO</p>
          <p class="mt-4 text-sm text-gray-600" set:html={t.about.farouk} />
        </div>
        <div class="p-6 text-center">
          <Image
            src={youssef}
            alt="Youssef Doubli"
            class="mx-auto h-24 w-24 rounded-full object-cover"
          />
          <h3 class="mt-2 text-xl font-semibold">Youssef Doubli</h3>
          <p class="text-sm font-medium text-gray-500">CPTO</p>
          <p class="mt-4 text-sm text-gray-600" set:html={t.about.youssef} />
        </div>
        <div class="p-6 text-center">
          <div class="mx-auto h-24 w-24 overflow-hidden rounded-full">
            <Image
              src={achraf}
              alt="Achraf El Masdouri"
              class="origin-top scale-150 rounded-full object-cover"
            />
          </div>
          <h3 class="mt-2 text-xl font-semibold">Achraf El Masdouri</h3>
          <p class="text-sm font-medium text-gray-500">COO</p>
          <p class="mt-4 text-sm text-gray-600" set:html={t.about.achraf} />
        </div>
      </div>
    </section>
  </main>
</Layout>
