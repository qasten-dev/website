---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { getSafeCurrentLocale, getTranslations } from "@/utils/i18n";

const currentLocale = getSafeCurrentLocale(Astro.currentLocale);
const t = getTranslations(currentLocale);
const p = t.homePage;
---

<Layout
  title="Demo | Qasten"
  description="Watch how Qasten's AI receptionist captures HVAC leads 24/7, answers instantly, and books jobs automatically."
  noBackground={true}
>
  <main class="w-full">
    <section
      class="relative left-1/2 flex min-h-screen w-screen -translate-x-1/2 items-center overflow-hidden bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950"
    >
      <div class="hero-mesh"></div>
      <div
        class="bg-primary/20 absolute top-20 left-8 h-72 w-72 rounded-full blur-[110px]"
      >
      </div>
      <div
        class="absolute right-8 bottom-10 h-80 w-80 rounded-full bg-[var(--brand-accent)]/10 blur-[120px]"
      >
      </div>

      <div class="container-custom relative z-10 py-20">
        <div class="mx-auto max-w-4xl">
          <!-- Header -->
          <div class="mb-12 text-center">
            <span class="badge badge-dark mb-6">Watch the Demo</span>
            <h1
              class="mb-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl"
            >
              See How{" "}
              <span
                class="bg-gradient-to-r from-[var(--brand-secondary)] to-[var(--brand-secondary-light)] bg-clip-text text-transparent"
              >
                Qasten
              </span>
              {" "} Works
            </h1>
            <p
              class="mx-auto max-w-2xl text-lg leading-relaxed text-neutral-300 sm:text-xl"
            >
              {p.hero.subhead}
            </p>
          </div>

          <!-- Video -->
          <div class="mb-10">
            <div
              class="demo-video-wrapper bg-card w-full overflow-hidden rounded-2xl border border-neutral-200/20 shadow-2xl"
            >
              <div class="bg-muted/50 aspect-video w-full">
                <video
                  src="/demo.mp4"
                  controls
                  playsinline
                  class="demo-video h-full w-full object-contain"
                  width="896"
                  height="504"
                  aria-label="HVAC Voice Agent demo"></video>
              </div>
            </div>
          </div>

          <!-- Summary Copy -->
          <div class="mb-10">
            <div class="mx-auto max-w-4xl">
              <div
                class="flex flex-col items-center gap-6 sm:flex-row sm:justify-between"
              >
                <div
                  class="demo-summary-card group relative mx-auto w-60 flex-1 overflow-hidden rounded-2xl border-2 border-red-500/30 bg-gradient-to-br from-red-950/40 via-red-900/30 to-orange-950/40 p-6 text-center backdrop-blur-sm transition-all hover:border-red-500/50 hover:shadow-xl hover:shadow-red-500/20 sm:mx-0 sm:w-auto"
                >
                  <div
                    class="mb-2 text-xs font-bold tracking-wider text-red-400 uppercase"
                  >
                    Before
                  </div>
                  <div class="demo-icon-wrapper mb-4 flex justify-center">
                    <div
                      class="rounded-full bg-red-500/20 p-4 ring-2 ring-red-500/30"
                    >
                      <Icon
                        name="mdi:phone-missed"
                        class="text-3xl text-red-400"
                      />
                    </div>
                  </div>
                  <div class="text-base font-bold text-white">Missed calls</div>
                  <div class="mt-1 text-sm font-medium text-neutral-300">
                    Lost jobs
                  </div>
                </div>

                <!-- Arrow 1 -->
                <div class="demo-arrow flex-shrink-0">
                  <Icon
                    name="mdi:arrow-right"
                    class="text-primary/60 hidden text-4xl sm:block"
                  />
                  <Icon
                    name="mdi:arrow-down"
                    class="text-primary/60 text-4xl sm:hidden"
                  />
                </div>

                <div
                  class="demo-summary-card group border-primary/40 from-primary/20 via-primary/15 hover:border-primary/60 hover:shadow-primary/30 relative mx-auto w-60 flex-1 overflow-hidden rounded-2xl border-2 bg-gradient-to-br to-[var(--brand-secondary)]/20 p-6 text-center backdrop-blur-sm transition-all hover:shadow-xl sm:mx-0 sm:w-auto"
                >
                  <div
                    class="text-primary mb-2 text-xs font-bold tracking-wider uppercase"
                  >
                    After
                  </div>
                  <div class="demo-icon-wrapper mb-4 flex justify-center">
                    <div
                      class="bg-primary/30 ring-primary/40 rounded-full p-4 ring-2"
                    >
                      <Icon name="mdi:robot" class="text-primary text-3xl" />
                    </div>
                  </div>
                  <div class="text-base font-bold text-white">
                    AI answers 24/7
                  </div>
                  <div class="mt-1 text-sm font-medium text-neutral-300">
                    Books instantly
                  </div>
                </div>

                <!-- Arrow 2 -->
                <div class="demo-arrow flex-shrink-0">
                  <Icon
                    name="mdi:arrow-right"
                    class="hidden text-4xl text-green-400/60 sm:block"
                  />
                  <Icon
                    name="mdi:arrow-down"
                    class="text-4xl text-green-400/60 sm:hidden"
                  />
                </div>

                <div
                  class="demo-summary-card group relative mx-auto w-60 flex-1 overflow-hidden rounded-2xl border-2 border-green-500/30 bg-gradient-to-br from-green-950/40 via-green-900/30 to-emerald-950/40 p-6 text-center backdrop-blur-sm transition-all hover:border-green-500/50 hover:shadow-xl hover:shadow-green-500/20 sm:mx-0 sm:w-auto"
                >
                  <div
                    class="mb-2 text-xs font-bold tracking-wider text-green-400 uppercase"
                  >
                    Result
                  </div>
                  <div class="demo-icon-wrapper mb-4 flex justify-center">
                    <div
                      class="rounded-full bg-green-500/20 p-4 ring-2 ring-green-500/30"
                    >
                      <Icon
                        name="mdi:chart-line"
                        class="text-3xl text-green-400"
                      />
                    </div>
                  </div>
                  <div class="text-base font-bold text-white">
                    More bookings
                  </div>
                  <div class="mt-1 text-sm font-medium text-neutral-300">
                    Zero extra work
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- CTA Button -->
          <div class="flex flex-col items-center justify-center gap-4">
            <a
              href="/"
              class="cta-button group min-h-16 px-10 py-5 text-lg font-bold whitespace-nowrap"
            >
              Learn More
              <Icon
                name="mdi:arrow-right"
                class="shrink-0 text-xl transition-transform group-hover:translate-x-1"
              />
            </a>
            <p class="text-center text-sm font-medium text-neutral-400">
              <Icon name="mdi:shield-check" class="text-primary inline" />
              {" "}
              7-day risk-free trial • No payment required • Cancel anytime
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-trust-item {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .demo-summary-card {
    position: relative;
  }

  .demo-arrow {
    transition: transform 0.3s ease;
  }

  .demo-summary-card:hover + .demo-arrow,
  .demo-arrow:hover {
    transform: scale(1.2);
  }

  .demo-icon-wrapper {
    transition: transform 0.3s ease;
  }

  .demo-summary-card:hover .demo-icon-wrapper {
    transform: scale(1.1);
  }
</style>
