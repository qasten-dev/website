---
import Layout from "@/layouts/Layout.astro";
import { getPosts } from "@/utils/blog";
import BlogGrid from "../BlogGrid.astro";
import { getTranslations } from "@/utils/i18n";

const { currentLocale } = Astro;

const posts = await getPosts(currentLocale);
const t = getTranslations(currentLocale);
---

<Layout title="Blog" description={t.metaDescription.blog}>
  <main class="mx-auto mt-24 w-full max-w-6xl px-4">
    <h1 class="mb-24 text-center text-6xl font-semibold">Blog</h1>

    <BlogGrid posts={posts} />
  </main>
</Layout>
